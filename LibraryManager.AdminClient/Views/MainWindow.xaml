<Window x:Class="LibraryManager.AdminClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Library Manager - Admin Panel" 
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15">
            <Grid>
                <TextBlock Text="Library Manager - Admin Panel" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="White" VerticalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock x:Name="txtUserName" 
                               Foreground="White" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <Button Content="Logout" Click="BtnLogout_Click"
                            Padding="10,5" Background="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            
            <!-- Books Tab -->
            <TabItem Header="Books Management">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Search -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="txtSearchBook" Grid.Column="0" 
                                 Height="30" VerticalContentAlignment="Center"
                                 FontSize="14"/>
                        <Button Grid.Column="2" Content="Search" Click="BtnSearchBooks_Click"
                                Width="80" Height="30"/>
                        <Button Grid.Column="4" Content="Refresh" Click="BtnRefreshBooks_Click"
                                Width="80" Height="30"/>
                    </Grid>

                    <!-- Books DataGrid -->
                    <DataGrid x:Name="dgBooks" Grid.Row="2" 
                              ItemsSource="{Binding Books}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding BookId}" Width="50"/>
                            <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="*"/>
                            <DataGridTextColumn Header="ISBN" Binding="{Binding Isbn}" Width="120"/>
                            <DataGridTextColumn Header="Year" Binding="{Binding PublishYear}" Width="60"/>
                            <DataGridTextColumn Header="Total" Binding="{Binding TotalCopies}" Width="60"/>
                            <DataGridTextColumn Header="Available" Binding="{Binding AvailableCopies}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Actions -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Add Book" Click="BtnAddBook_Click"
                                Width="100" Height="35" Margin="0,0,10,0"/>
                        <Button Content="Edit Book" Click="BtnEditBook_Click"
                                Width="100" Height="35" Margin="0,0,10,0"/>
                        <Button Content="Delete Book" Click="BtnDeleteBook_Click"
                                Width="100" Height="35"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Categories Tab -->
            <TabItem Header="Categories">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Add Category -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="txtNewCategory" Grid.Column="0" 
                                 Height="30" VerticalContentAlignment="Center"
                                 FontSize="14"/>
                        <Button Grid.Column="2" Content="Add Category" Click="BtnAddCategory_Click"
                                Width="120" Height="30"/>
                    </Grid>

                    <!-- Categories List -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListBox x:Name="lstCategories" Grid.Row="0"
                                 ItemsSource="{Binding Categories}"
                                 DisplayMemberPath="Name"
                                 FontSize="14"/>
                        <Button Grid.Row="2" Content="Delete Selected" Click="BtnDeleteCategory_Click"
                                Width="120" Height="30" HorizontalAlignment="Right"/>
                    </Grid>
                </Grid>
            </TabItem>

            <!-- Authors Tab -->
            <TabItem Header="Authors">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Add Author -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBox x:Name="txtNewAuthor" Grid.Column="0" 
                                 Height="30" VerticalContentAlignment="Center"
                                 FontSize="14"/>
                        <Button Grid.Column="2" Content="Add Author" Click="BtnAddAuthor_Click"
                                Width="120" Height="30"/>
                    </Grid>

                    <!-- Authors List -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <ListBox x:Name="lstAuthors" Grid.Row="0"
                                 ItemsSource="{Binding Authors}"
                                 DisplayMemberPath="Name"
                                 FontSize="14"/>
                        <Button Grid.Row="2" Content="Delete Selected" Click="BtnDeleteAuthor_Click"
                                Width="120" Height="30" HorizontalAlignment="Right"/>
                    </Grid>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
