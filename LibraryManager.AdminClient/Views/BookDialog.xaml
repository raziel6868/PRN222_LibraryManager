<Window x:Class="LibraryManager.AdminClient.Views.BookDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Details" 
        Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Title:" FontWeight="Bold"/>
        <TextBox x:Name="txtTitle" Grid.Row="2" Height="30" FontSize="14" 
                 VerticalContentAlignment="Center"/>

        <!-- ISBN -->
        <TextBlock Grid.Row="4" Text="ISBN:" FontWeight="Bold"/>
        <TextBox x:Name="txtIsbn" Grid.Row="6" Height="30" FontSize="14" 
                 VerticalContentAlignment="Center"/>

        <!-- Publish Year -->
        <TextBlock Grid.Row="8" Text="Publish Year:" FontWeight="Bold"/>
        <TextBox x:Name="txtPublishYear" Grid.Row="10" Height="30" FontSize="14" 
                 VerticalContentAlignment="Center"/>

        <!-- Category -->
        <TextBlock Grid.Row="12" Text="Category:" FontWeight="Bold"/>
        <ComboBox x:Name="cmbCategory" Grid.Row="14" Height="30" FontSize="14"
                  DisplayMemberPath="Name" SelectedValuePath="CategoryId"/>

        <!-- Author -->
        <TextBlock Grid.Row="16" Text="Author:" FontWeight="Bold"/>
        <ComboBox x:Name="cmbAuthor" Grid.Row="18" Height="30" FontSize="14"
                  DisplayMemberPath="Name" SelectedValuePath="AuthorId"/>

        <!-- Total Copies -->
        <TextBlock Grid.Row="20" Text="Total Copies:" FontWeight="Bold"/>
        <TextBox x:Name="txtTotalCopies" Grid.Row="22" Height="30" FontSize="14" 
                 VerticalContentAlignment="Center"/>

        <!-- Available Copies -->
        <TextBlock Grid.Row="24" Text="Available Copies:" FontWeight="Bold"/>
        <TextBox x:Name="txtAvailableCopies" Grid.Row="26" Height="30" FontSize="14" 
                 VerticalContentAlignment="Center"/>

        <!-- Error Message -->
        <TextBlock x:Name="txtError" Grid.Row="28" Foreground="Red" 
                   TextWrapping="Wrap" Visibility="Collapsed"/>

        <!-- Buttons -->
        <StackPanel Grid.Row="30" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="BtnSave_Click" 
                    Width="80" Height="35" Margin="0,0,10,0"/>
            <Button Content="Cancel" Click="BtnCancel_Click" 
                    Width="80" Height="35"/>
        </StackPanel>
    </Grid>
</Window>
