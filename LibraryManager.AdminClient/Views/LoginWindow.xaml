<Window x:Class="LibraryManager.AdminClient.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Login - LibraryManager" 
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Admin Login" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="2">
            <TextBlock Text="Username:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtUsername" Height="30" FontSize="14"/>
        </StackPanel>

        <StackPanel Grid.Row="4">
            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Height="30" FontSize="14"/>
        </StackPanel>

        <TextBlock Grid.Row="6" x:Name="txtError"
                   Foreground="Red"
                   TextWrapping="Wrap"
                   Visibility="Collapsed"/>

        <Button Grid.Row="8" Content="Login" x:Name="btnLogin"
                Click="BtnLogin_Click"
                Height="35" FontSize="14" FontWeight="Bold"/>
    </Grid>
</Window>
